{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "declaration": true,
      "sourceMap": true,
      "outDir": "./build",
      "strict": true,
      "moduleResolution": "node",
      "types": [
        "node"
      ],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src"
    ]
  }
  